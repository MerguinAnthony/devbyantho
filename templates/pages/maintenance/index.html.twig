{% extends 'base.html.twig' %}

{% block title %}Maintenance | Dev by Antho{% endblock %}

{% block body %}
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Poppins", sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    background-color: #f4f4f4;
    /* Assurez-vous que le chemin vers l'image est correct */
    background-image: url("{{ asset('assets/png/home_coming_son.png') }}"); 
    background-size: cover;
    background-position: center;
    height: 100vh;
    position: relative;
  }

  .content {
    position: absolute;
    top: 20px; /* Adjust as needed */
    right: 20px; /* Adjust as needed */
    text-align: center;
    background-color: rgba(0, 0, 0, 0.5); /* Optional: Add a background color with opacity for better readability */
    padding: 20px;
    border-radius: 10px; /* Optional: Add some border radius for rounded corners */
  }

  .exit-button {
    position: absolute;
    top: 20px; /* Adjust as needed */
    left: 20px; /* Adjust as needed */
    padding: 10px 20px;
    background-color: #ff0000; /* Red background for visibility */
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    font-size: 1rem;
  }

  h1 {
    font-size: 3rem;
    color: #ccc;
    margin-bottom: 1.5rem;
  }

  p {
    font-size: 1.5rem;
    color: #eee;
    margin-bottom: 2rem;
  }

  a {
    color: #fff;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #67a7ff;
  }
</style>

<body>
<main>
{% if app.user %}
    <a href="{{path ('admin') }}" class="exit-button">Revenir au dashboard</a>
{% endif %}
    <div class="content">
        <h1>Dev by Antho</h1>
        <p>Site en maintenance</p>
        <p class="message">Ne paniquez pas !</p>
        <p class="message">
            Pour toute urgence, contactez-nous au <br />
            <a href="tel:0610049648">06 10 04 96 48</a> <br />ou envoyez-nous un
            e-mail Ã  <br />
            <a href="mailto:contact@devbyantho.fr">contact@devbyantho.fr</a>
        </p>
    </div>
</main>
</body>

{% endblock %}
