{% extends 'base.html.twig' %}

{% block title %}Messages de Contact | DevByAntho{% endblock %}

{% block body %}
<section class="container" style="padding:15vh 0;">
    <div class="text-center mb-4">
        <h1>Messages de Contact</h1>
    </div>
    {% if message is defined %}
        <div class="alert alert-success">{{ message }}</div>
    {% endif %}
    {% if error is defined %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Liste des messages</h2>
                </div>
                <div class="card-body">
                {% if contacts is empty %}
                    <p class="text-center">Aucun message de contact pour le moment.</p>
                {% else %}
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>E-mail</th>
                                <th>Téléphone</th>
                                <th>Message</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contact in contacts %}
                                <tr>
                                    <td>{{ contact.lastName }}</td>
                                    <td>{{ contact.firstName }}</td>
                                    <td><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></td>
                                    <td><a href="tel:{{ contact.phone }}">{{ contact.phone }}</a></td>
                                    <td>{{ contact.message }}</td>
                                    <td class="text-center">
                                        <a href="{{ path('contact_delete', {'id': contact.id}) }}" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
